{
  "version": "11.8.3.8520",
  "description": "Utility to reduce the memory usage of Firefox or other browsers",
  "homepage": "https://www.rizonesoft.com/downloads/firemin/",
  "license": "GPL-3.0-or-later",
  "url": "https://rizonesoft.com/?sdm_process_download=1&download_id=17280#/dl.zip",
  "hash": "68feaa9da6a48a1c25e6661fa518c262f0609d0add215c15befbceaacf1c488b",
  "extract_dir": "Firemin_11.8.3.8520",
  "architecture": {
    "64bit": {
      "post_install": [
        "Remove-Item \"$dir\\Firemin.exe\" -Verbose",
        "Move-Item \"$dir\\Firemin_X64.exe\" \"$dir\\Firemin.exe\" -Force -Verbose"
      ]
    },
    "32bit": {
      "post_install": "Remove-Item \"$dir\\Firemin_X64.exe\""
    }
  },
  "shortcuts": [["Firemin.exe", "Firemin"]],
  "persist": "Firemin.ini",
  "checkver": {
    "script": [
      "$checkUrl =  'https://raw.githubusercontent.com/rizonesoft/Firemin/refs/heads/main/Firemin.ru'",
      "$checHtml = (iwr $checkUrl).Content",
      "$m = $checHtml | Select-String -Pattern 'LatestBuild=(\\d+)'",
      "$build = $m.Matches.Groups[1].Value",
      "$u = $checHtml | Select-String -Pattern 'UpdateUrl=(https://.+)$'",
      "$url = $u.Matches.Groups[1].Value",
      "$html = (Invoke-Webrequest $url)",
      "$dlUrl = ($html.Links | ? {$_.outerHTML -like '*title=\"Firemin\"*'}).href",
      "$output=\"version=$($build)url=$($dlUrl)\"",
      "$output"
    ],
    "regex": "(?<version>\\d+)url=(?<Link>.+)$",
    "replace": "11.8.3.${version}"
  },
  "autoupdate": {
    "url": "$matchLink#/dl.exe",
    "extract_dir": "Firemin_$version"
  }
}
